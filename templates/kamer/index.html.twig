{% extends 'base.html.twig' %}

{% block title %}Kamer index{% endblock %}

{% block body %}
    <h1>Kamer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Prijs</th>
                <th>Naam</th>
                <th>Soort</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kamer in kamers %}
            <tr>
                <td>{{ kamer.id }}</td>
                <td><img style="max-width:100px" src="{{ vich_uploader_asset(kamer, 'imageFile') }}" alt="#" /></td>
                <td>{{ kamer.prijs }}</td>
                <td>{{ kamer.naam }}</td>
                <td>{{ kamer.soort }}</td>
                <td>
                    <a href="{{ path('kamer_show', {'id': kamer.id}) }}">show</a>
                    <a href="{{ path('kamer_edit', {'id': kamer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('kamer_new') }}">Create new</a>
{% endblock %}
